<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_menu_word"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_menu_hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早上好"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_menu_saying"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_menu_hi"
                android:gravity="center_vertical"
                android:text="路慢慢其修远兮，吾将上下而求索"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_menu_saying"
                android:layout_alignRight="@+id/tv_menu_saying"
                android:text="——屈原"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_menu_moudle1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_menu_activity"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:background="@drawable/background_first"
                android:text="activity"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_menu_broadcast"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_first"
                android:text="broadcast"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_menu_service"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:background="@drawable/background_first"
                android:text="service"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btn_menu_component"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_first"
                android:text="content         provider"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button

                android:layout_width="130dp"
                android:layout_height="90dp"
                android:background="@drawable/background_first"
                android:text="常用控件1"
                android:textSize="20sp" />
            <Button

                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_first"
                android:text="常用控件2"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button

                android:layout_width="130dp"
                android:layout_height="90dp"
                android:background="@drawable/background_first"
                android:text="常用控件3"
                android:textSize="20sp" />
            <Button

                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_first"
                android:text="常用控件4"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button

                android:layout_width="130dp"
                android:layout_height="90dp"
                android:background="@drawable/background_first"
                android:text="常用控件5"
                android:textSize="20sp" />
            <Button

                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_first"
                android:text="常用控件6"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>